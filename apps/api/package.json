{
    "name": "@pontiff/api",
    "version": "1.0.0",
    "description": "Pontiff Backend API - Scanner, Roaster, and Social Engine",
    "main": "src/index.ts",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "worker": "tsx src/worker.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration",
        "test:load": "npm run test:load:api && npm run test:load:betrayal && npm run test:load:ws",
        "test:load:api": "ts-node src/tests/load/api-stress.ts",
        "test:load:betrayal": "ts-node src/tests/load/betrayal-spam.ts",
        "test:load:ws": "ts-node src/tests/load/websocket-stress.ts",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.73.0",
        "@google/generative-ai": "^0.21.0",
        "@supabase/supabase-js": "^2.39.0",
        "axios": "^1.6.5",
        "bull": "^4.12.0",
        "canvas": "^2.11.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "ethers": "^6.10.0",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "ioredis": "^5.3.2",
        "joi": "^18.0.2",
        "qrcode": "^1.5.3",
        "twitter-api-v2": "^1.29.0",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@types/bull": "^4.10.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.10.0",
        "@types/qrcode": "^1.5.6",
        "@types/supertest": "^6.0.0",
        "@types/winston": "^2.4.4",
        "@types/ws": "^8.5.9",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "tsx": "^4.21.0",
        "typescript": "^5.3.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/tests/**",
            "!src/index.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        }
    }
}
